<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewController.Form3_annotationActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textViewInfoTextGrundFehlmeldung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="@string/info_text_reason_report_was_wrong"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btnNext3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:onClick="next3Pressed"
        android:scaleType="fitXY"
        android:src="@drawable/chevron_right" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/btnNext3"
        android:text="@string/checkbox_correct_code_n_a"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
</RelativeLayout>