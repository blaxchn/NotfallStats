<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/hint_id"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/row_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="01.01.2020"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/row_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_id"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_code_gemeldet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/meldung_code"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_code_korrekt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/meldung_code"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/row_bemerkung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_linear_layout"
        android:text="Bemerkung: noch entfernen"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/row_kommentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_bemerkung"
        android:textSize="16sp"
        android:text="Kommentarfeld: noch entfernen"/>

</RelativeLayout>